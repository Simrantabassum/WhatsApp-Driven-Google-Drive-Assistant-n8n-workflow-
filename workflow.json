    {
      "parameters": {
        "jsCode": "const files = $input.first().json.files || [];\nconst folderPath = $('Parse Command').first().json.args[0] || 'root';\n\nif (files.length === 0) {\n  return {\n    json: {\n      success: true,\n      response: `ðŸ“ *${folderPath}*\\n\\nNo files found.`\n    }\n  };\n}\n\nlet response = `ðŸ“ *${folderPath}*\\n\\n*Files (${files.length}):*\\n`;\n\nfiles.forEach((file, index) => {\n  const icon = file.mimeType.includes('folder') ? 'ðŸ“' : 'ðŸ“„';\n  const size = file.size ? ` (${Math.round(file.size/1024)}KB)` : '';\n  response += `${index + 1}. ${icon} *${file.name}*${size}\\n`;\n});\n\nreturn {\n  json: {\n    success: true,\n    response: response\n  }\n};"
      },
