# =============================================================================
# WhatsApp-Driven Google Drive Assistant - Environment Variables
# =============================================================================

# =============================================================================
# Twilio Configuration
# =============================================================================
# Your Twilio Account SID (found in Twilio Console)
TWILIO_ACCOUNT_SID=your_twilio_account_sid_here

# Your Twilio Auth Token (found in Twilio Console)
TWILIO_AUTH_TOKEN=your_twilio_auth_token_here

# Your Twilio WhatsApp number (sandbox format)
TWILIO_PHONE_NUMBER=whatsapp:+14155238886

# =============================================================================
# Google Drive Configuration
# =============================================================================
# Google OAuth2 Client ID (from Google Cloud Console)
GOOGLE_CLIENT_ID=your_google_client_id_here

# Google OAuth2 Client Secret (from Google Cloud Console)
GOOGLE_CLIENT_SECRET=your_google_client_secret_here

# OAuth2 Redirect URI (must match n8n callback URL)
GOOGLE_REDIRECT_URI=http://localhost:5678/callback

# Google Drive Root Folder ID (optional, leave empty for root)
GOOGLE_DRIVE_ROOT_FOLDER_ID=

# =============================================================================
# OpenAI Configuration
# =============================================================================
# Your OpenAI API Key
OPENAI_API_KEY=your_openai_api_key_here

# OpenAI Model to use for summarization
OPENAI_MODEL=gpt-4o-mini

# Maximum tokens for AI responses
OPENAI_MAX_TOKENS=1000

# =============================================================================
# n8n Configuration
# =============================================================================
# Enable basic authentication
N8N_BASIC_AUTH_ACTIVE=true

# n8n admin username
N8N_BASIC_AUTH_USER=admin

# n8n admin password (use strong password)
N8N_BASIC_AUTH_PASSWORD=admin123

# n8n port
N8N_PORT=5678

# n8n protocol (http or https)
N8N_PROTOCOL=http

# n8n host
N8N_HOST=localhost

# =============================================================================
# Workflow Configuration
# =============================================================================
# Webhook path for WhatsApp messages
WEBHOOK_PATH=/webhook/whatsapp

# Maximum file size for AI summarization (in bytes)
MAX_FILE_SIZE_FOR_SUMMARY=10485760

# Allowed file types for summarization
ALLOWED_SUMMARY_TYPES=pdf,docx,txt,md

# Confirmation timeout (in seconds)
CONFIRMATION_TIMEOUT=300

# =============================================================================
# Audit Logging Configuration
# =============================================================================
# Google Sheets ID for audit logging (optional)
AUDIT_SHEET_ID=

# Enable audit logging
ENABLE_AUDIT_LOGGING=true

# =============================================================================
# Security Configuration
# =============================================================================
# Secret key for webhook verification (optional)
WEBHOOK_SECRET=your_webhook_secret_here

# Allowed phone numbers (comma-separated, leave empty for all)
ALLOWED_PHONE_NUMBERS=

# =============================================================================
# Docker Configuration
# =============================================================================
# Docker container name
CONTAINER_NAME=whatsapp-drive-assistant

# Data persistence directory
DATA_DIR=./data

# =============================================================================
# Development Configuration
# =============================================================================
# Enable debug mode
DEBUG=false

# Log level (debug, info, warn, error)
LOG_LEVEL=info

# =============================================================================
# Optional: External Services
# =============================================================================
# ngrok URL for local development (optional)
NGROK_URL=

# Custom domain for production (optional)
CUSTOM_DOMAIN= 
